<% unless user_signed_in? %>
  <div class="h-screen bg-indigo-100 flex justify-center items-center">
    <div class="lg:w-2/5 md:w-1/2 w-2/3">
      <%= form_for(User.new, url: user_registration_path, method: :post, class: "bg-white p-10 rounded-lg shadow-lg min-w-full")  do |form| %>
        <div>
          <div>
            <%= form.label :email, class: "text-gray-800 font-semibold block my-3 text-md" %>
            <%= form.text_field :email, placeholder: "email", class: "w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none" %>
          </div>
          <div>
            <%= form.label :password, class: "text-gray-800 font-semibold block my-3 text-md" %>
            <%= form.password_field :password, placeholder: "password", class: "w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none" %>
          </div>
          <button type="submit" class="w-full mt-6 bg-indigo-600 rounded-lg px-4 py-2 text-lg text-white tracking-wide font-semibold font-sans">Register</button>
          <button type="button" class="w-full mt-6 mb-3 bg-indigo-100 rounded-lg px-4 py-2 text-lg text-gray-800 tracking-wide font-semibold font-sans">
            <%=link_to "Login", new_user_session_path %>
          </button>
      <% end %>
      </div>
    </div>
  </div>
<% end %>